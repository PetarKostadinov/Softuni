<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{crypto.image}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{crypto.name}}</h1>
            <h3 id="payment">Payment method: {{crypto.payment}}</h3>
            <p id="price"><span>Price: ${{crypto.price}}</span></p>
            <p id="description">{{crypto.description}}</p>
        </div>
        <div class="product-btn">
            <!--Only for registered user and author of the publication -->
            {{#if crypto.isOwner}}
            
            <div class="author">
                <a href="/crypto/{{crypto._id}}/edit" class="btn-edit">Edit</a>
                <a href="/crypto/{{crypto._id}}/delete" class="btn-delete">Delete</a>
            </div>
           
            {{/if}}
        {{#if username}}
        {{#unless crypto.isOwner}}
            {{#if crypto.isBought}}

            <!-- Logged in user who has already buy this crypto-->
            <p class="buy-message">You already bought these crypto coins.</p>

           {{else}} 
            <!-- Logged in user who has not yet buy this crypto-->
            <a href="/crypto/{{crypto._id}}/buy" class="btn-buy">Buy</a>

        </div>
        {{/if}}
        {{/unless}}
        {{/if}}
    </div>
</section>



