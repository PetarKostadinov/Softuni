<div class="profile">

    <!-- Start Profile Personal Data Section -->
    <div class="profile-data">
        <div class="profile_img">
            <div class="image">
                <img src="/static/images/person.png" alt="img8">
            </div>
        </div>
        <div class="personal">
            <div class="edit">
                <!-- User Username -->
                <p>{{user.username}}</p>
            </div>
            <div class="data">

                <!-- Total Number of Photos by the User -->
                <span>{{user.total.length}}</span>
                <p>photos</p>

            </div>
            <!-- User Email Address -->
            <p class="email">{{user.email}}</p>
        </div>
    </div>

    <!-- Start Uploaded Photos Section -->
    <div class="pet-photos">

        
        {{#each current}}
        <a href="/profile">
            <!-- Pet Photo -->
            <img src="{{this}}" alt="pet img">
        </a>
        
        {{else}}



        <!--If there are no photo yet!-->
        <article class="not-available-photo">
            <h1>You haven't uploaded photos yetâ€¦</h1>
        </article>
        {{/each}}
    </div>

</div>

