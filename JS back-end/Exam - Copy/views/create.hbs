<form class="text-center border border-light p-5" action="/course/create" method="post">
    <h1>Create Course</h1>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" placeholder="Course name" name="title" value="{{body.title}}">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" placeholder="Description" name="description">{{body.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="imageUrl">Image url</label>
        <input type="text" class="form-control" placeholder="Image Url" name="image" value="{{body.image}}">
    </div>
    <div class="form-group">
        <label for="duration">Duration</label>
        <input type="text" class="form-control" placeholder="4 weeks" name="duration" value="{{body.duration}}">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

