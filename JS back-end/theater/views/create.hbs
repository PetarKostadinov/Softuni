
<form class="theater-form" action="/create" method="post">
    <h1>Create Theater</h1>
    <div>
        <label for="title">Theater Title:</label>
        <input type="text" placeholder="Theater name" name="name" value="{{data.name}}">
    </div>
    <div>
        <label for="description">Theater Description:</label>
        <textarea placeholder="Description" name="description">{{data.description}}</textarea>
    </div>
    <div>
        <label for="imageUrl">Image url:</label>
        <input type="text" placeholder="Image Url" name="image" value="{{data.image}}">
    </div>
    <div class="check">
        <input type="checkbox" id="check-box" name="isPublic"  {{#if data.isPublic}}checked{{/if}}>
        <label for="check-box">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>




